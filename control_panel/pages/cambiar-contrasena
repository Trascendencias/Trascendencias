        <div class="body">
		<br>
		<center><h6><b> Cambiar Contraseña </b></h6> </center>
			
			<form class="registro" id="forma-registro" method="get" action="cambiar-contrasena "> <br><br>

				<!-- CONTRASENA Participante-->
				<input maxlength="50" onblur="if (this.value == '') { this.value = 'Contraseña'; this.type='text' }"  onfocus="if(this.value == 'Contraseña') { this.value = ''; this.type='password'}" type="text" value="Contraseña" name="contrasena" required>
				<p class="error"> *Debe llenar esta información </p>

				<!-- REPITE LA CONTRASENA Participante-->
				<input maxlength="50" onblur="if (this.value == '') { this.value = 'Repita la contraseña'; this.type='text' }"  onfocus="if(this.value == 'Repita la contraseña') { this.value = ''; this.type='password'}" type="text" value="Repita la contraseña" name="contrasena2" required>
				<p class="error"> *Debe llenar esta información </p>
                
               
                <div class="spacer"></div>
                <hr>
				<button type="button" class="submit" onclick="validate()"> Siguiente </button>
                <button type="button" class="third" onclick="window.history.back();"> Cancelar </button>
